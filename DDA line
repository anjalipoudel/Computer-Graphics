
#include<stdio.h>
#include<conio.h>
#include<dos.h>
#include<graphics.h>
#include<math.h>
void main()
{
int gd = DETECT,gm;
int a1 b1,a2 b2;
int da,db ,step;
Float a,b,aincre,bincre
init graph (&gd,&gm,"c :\\ turbo c 3 \\ by i"
printf("enter second end point of a line");
scanf("%d %d) & a2 ,& b2);
clrscr ();
da = a2- a1;
db = b2-b1;
if (abs(da) > abs(db))
step = da;
else
step= db;
aincre = da |step;
bincre = db |step;
a = a1 ; b = a1;
for (int i =o;i< step;i++)
{
putpixel ((int)a, (int)b; BLUE);
delay(100);
a = a+aincre
b = b+bincre
}
getch()
close graph ();
}
