
#include<stdio.h>
#include<conio.h>
#include<dos.h>
#include<graphics.h>
#include<math.h>
void main()
{
int gd = DETECT,gm;
int X1 Y1,X2 Y2;
int dx,dy ,step;
Float x,y,xincre,yincre
init graph (&gd,&gm,"c :\\ turbo c 3 \\ by i"
printf("enter second end point of a line");
scanf("%d %d) & X2 & Y2);
clrscr ();
dx = X2- X1;
dy = Y2-Y1;
if (abs(dx) > abs(dy))
step = dx;
else
step= dy;
xincre = dx |step;
yincre = dy |step;
x = X1 ; y = Y1;
for (int i =o;i< step;i++)
{
putpixel ((int)x, (int)y; RED);
delay(100);
x = x+xincre
y = y+yincre
}
getch()
close graph ();
}
